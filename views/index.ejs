<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/jpeg" href="favicon.jpeg">
    <title>Bridge Solutions</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom gradient animations */
        .gradient-btn {
            background-size: 200% auto;
            transition: all 0.3s ease;
        }
        .gradient-btn:hover {
            background-position: right center;
        }

        .hero-section {
            background-size: 200% 200%;
            animation: gradient 15s ease infinite;
        }

        /* Light mode gradient */
        html:not(.dark) .hero-section {
            background: linear-gradient(135deg, #60A5FA, #818CF8, #F472B6);
        }

        /* Dark mode gradient */
        html.dark .hero-section {
            background: linear-gradient(135deg, #0F2027, #203A43, #2C5364);
        }

        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }

        // Add dark mode toggle functionality with localStorage
        function toggleDarkMode() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('darkMode', 'light');
            } else {
                document.documentElement.classList.add('dark');
                localStorage.setItem('darkMode', 'dark');
            }
        }

        // Check for saved dark mode preference
        document.addEventListener('DOMContentLoaded', function() {
            if (localStorage.getItem('darkMode') === 'dark') {
                document.documentElement.classList.add('dark');
            }
        });
    </script>
</head>
<body class="bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
    <!-- Navigation -->
    <nav class="bg-blue-600 dark:bg-gray-800 fixed w-full z-10 shadow-lg transition-colors duration-200">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <span class="text-2xl font-bold text-white">Bridge</span>
                </div>
                <div class="flex items-center space-x-8">
                    <div class="hidden md:flex space-x-8">
                        <a href="/" class="text-white hover:text-gray-200">Home</a>
                        <a href="#" class="text-white hover:text-gray-200">Services</a>
                        <a href="#" class="text-white hover:text-gray-200">About</a>
                        <a href="#" class="text-white hover:text-gray-200">Contact</a>
                        <a href="/login" class="text-white hover:text-gray-200">Login</a>
                    </div>
                    <!-- Dark mode toggle button -->
                    <button onclick="toggleDarkMode()" class="p-2 rounded-lg bg-white/10 hover:bg-white/20">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z">
                            </path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="pt-24 hero-section">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
            <div class="text-center">
                <h1 class="text-4xl tracking-tight font-extrabold text-white sm:text-5xl md:text-6xl">
                    Innovate. Transform. Succeed.
                </h1>
                <p class="mt-3 max-w-md mx-auto text-base text-gray-100 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                    Leading the digital transformation with cutting-edge solutions for businesses worldwide.
                </p>
                <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
                    <div class="rounded-md shadow">
                        <a href="/get-started" class="gradient-btn bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 hover:from-pink-500 hover:via-purple-500 hover:to-blue-500 w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white md:py-4 md:text-lg md:px-10 transition-all duration-300 transform hover:scale-105">
                            Get Started
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <div class="py-12 bg-white dark:bg-gray-800 transition-colors duration-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white">Our Services</h2>
                <p class="mt-4 text-lg text-gray-500 dark:text-gray-400">Comprehensive solutions for your business needs</p>
            </div>

            <div class="mt-10">
                <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
                    <!-- Service 1 -->
                    <div class="p-6 bg-gray-50 dark:bg-gray-700 rounded-lg transition-colors duration-200">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Cloud Solutions</h3>
                        <p class="mt-2 text-gray-500 dark:text-gray-300">Scalable and secure cloud infrastructure for your growing business.</p>
                    </div>

                    <!-- Service 2 -->
                    <div class="p-6 bg-gray-50 dark:bg-gray-700 rounded-lg transition-colors duration-200">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Digital Marketing</h3>
                        <p class="mt-2 text-gray-500 dark:text-gray-300">Strategic marketing solutions to boost your online presence.</p>
                    </div>

                    <!-- Service 3 -->
                    <div class="p-6 bg-gray-50 dark:bg-gray-700 rounded-lg transition-colors duration-200">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">IT Consulting</h3>
                        <p class="mt-2 text-gray-500 dark:text-gray-300">Expert guidance for your technology decisions and strategy.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="bg-gray-100 dark:bg-gray-900 py-12 transition-colors duration-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white">Contact Us</h2>
                <p class="mt-4 text-lg text-gray-500 dark:text-gray-400">Get in touch with our team</p>
            </div>

            <div class="mt-8 max-w-md mx-auto">
                <form class="grid grid-cols-1 gap-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
                        <input type="text" name="name" id="name"
                            class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                        <input type="email" name="email" id="email"
                            class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
                        <textarea name="message" id="message" rows="4"
                            class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500"></textarea>
                    </div>

                    <div>
                        <button type="submit"
                            class="gradient-btn w-full bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 hover:from-pink-500 hover:via-purple-500 hover:to-blue-500 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 transform hover:scale-105">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-blue-600 dark:bg-gray-800 transition-colors duration-200">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <p class="text-base text-white">&copy; 2024 Bridge Solutions. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
